def random_planet(H2O, pressure, temperature, atmosher, biosphere):
    H2O = randint(1,100)
    pressure = randint(1,100)
    temperature = randint(-100,100)
    atmosher = randint(0,100)
    biosphere = randint(1,100)
    if H2O <= 15 and H2O >= 25:
        if temperature <= 40 and temperature >= 0:
            if pressure <= 40 and temperature >= 0:
                if atmosher <= 2 and atmosher >= 1:
                    print("Планету можнео заселить!")
                    if biosphere >= 1:
                        print("Планета обитаема!")
def evry_motion():
    #Постойки для изучения
    kosmoport = False
    steelworksfabrik = False
    embassy = False
    townhall = False
    correctionalarea = False
    #Постройки

    #Культура
    bespectacledcultures = 0 

    #Иследование
    investigation_1 = "КосмоПорт - 1(Цена:100.000$)"
    investigation_2 = "Сталелительный завод - 2(Цена:500.000$)"
    investigation_3 = "Посольство - 3(Цена:250.000$)"
    investigation_4 = "Ратуша - 4(Цена:100.000$)"
    investigation_5 = "Правительная площадь - 5(Цена:100.000$)"
    open = input("Насиление - 1\nИследовать - 2\nКультура - 3\nСпутники - 4\n")
    if open == 1:
        open_house = input("Город - 1\nФорпост - 2\nСтатистика по насилению - 3\nВыход - 4\n")
        if open_house == 1:
            build_house = input("Температура - 1\nДавление - 2\nВода - 3\nКислород - 4\n ")
            #if 
    #Иследовать
    elif open == 2:
        if kosmoport == True:
            investigation_1 = ""
        if steelworksfabrik == True:
            investigation_2 = ""
        if embassy == True:
            investigation_3 = ""
        if townhall == True:
            investigation_4 = ""
        if correctionalarea == True:
            investigation_5 = ""
        investigation = input (investigation_1 ,"\n",investigation_2 ,"\n",investigation_3 ,"\n",investigation_4 ,"\n",investigation_5 ,"\n")
        if investigation == 1 and kosmoport == False:
            kosmoport = True
        elif investigation == 2 and steelworksfabrik == False:
            steelworksfabrik = True
        elif investigation == 3 and embassy == False:
            embassy = True
        elif investigation == 4 and townhall == False:
            townhall = True
        elif investigation == 5 and correctionalarea == False:
            correctionalarea = True
    #Культура
    elif open == 3:
        print("Количество очков:",bespectacledcultures)
        input("")